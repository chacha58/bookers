
<h1>Editing Book</h1>

<%= flash[:notice] %>
<% if @book.errors.any? %>

  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
 <h3>title</h3>
 <%= f.text_field :title %>

 <h3>body</h3>
 <%= f.text_area :body %>

 <%= f.submit 'Update Book' %>

<% end %>

<%=link_to "Show", book_path %>|<%=link_to "Back", books_path %>