<h1>Book</h1>
<table class="table">
    <tr>
        <th>title</th>
        <th>body</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <!--<%#= link_to list.title, list_path(list.id) %>-->
        <td><%=link_to "show", book_path(book.id) %></td>
        <td><%= link_to "edit", book_path(book.id) %></td>
        <td><%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
    
    <% end %>
</table>

<h1>NewBook</h1>



<!--投稿部分-->

<%= form_with model: @book do |f| %>

 <h5>title</h5>
 <%= f.text_field :title %>

 <h5>body</h5>
 <%= f.text_area :body %>


 <%= f.submit'投稿'%>

<% end %>